<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_change_password"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorPrimary"
    android:layoutAnimation="@anim/anim_main_layout"
    android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_marginBottom="25dp"
                android:id="@+id/anim_lock"
                app:lottie_loop="true"
                android:layout_gravity="center_horizontal"
                app:lottie_rawRes="@raw/anim_lock"
                android:layout_height="120dp"/>


            <TextView
                android:layout_marginBottom="30dp"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:textColor="?attr/colorOnPrimary"
                android:text="تعویض رمز عبور"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <EditText
                    android:id="@+id/Old_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"                    android:background="?attr/colorPrimaryVariant"
                    android:hint="رمز عبور فعلی"
                    android:inputType="text"
                    android:maxLength="16"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHint="#7A7C87"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/newe_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"                    android:background="?attr/colorPrimaryVariant"
                    android:hint="رمز عبور جدید"
                    android:inputType="text"
                    android:maxLength="16"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHint="#7A7C87"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/repetitionpass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/colorPrimaryVariant"
                    android:hint="تکرار رمز عبور جدید"
                    android:inputType="text"
                    android:maxLength="16"
                    android:textColor="?attr/colorOnPrimary"
                    android:textColorHint="#7A7C87"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updatePassword"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="?colorSecondary"
                android:clickable="true"
                android:focusable="true"
                android:text="تایید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="24dp" />

        </LinearLayout>






</LinearLayout>