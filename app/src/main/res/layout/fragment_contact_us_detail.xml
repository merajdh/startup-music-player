<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="?colorPrimary"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="21dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/Gray"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:text="انتقاد و پیشنهادات"
        android:textColor="?colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:letterSpacing="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="هر انتقاد یا پیشنهادی دارید بنویسید ..."
        android:textColor="@color/Gray" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="?colorPrimaryVariant"
        app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/txt_Ticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="?colorPrimaryVariant"
            android:gravity="top|start"
            android:hint="انتقاد یا پیشنهاد خود را بنویسید ..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:letterSpacing="0.1"
            android:maxLines="10"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:paddingEnd="6dp"
            android:singleLine="false"
            android:textColor="?colorOnPrimary"
            android:textColorHint="#7A7C87"
            android:textSize="13sp"
            tools:ignore="TextContrastCheck,TextFields,TouchTargetSizeCheck" />
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/btn_accept"
            app:cardElevation="8dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            android:clickable="true"
            app:cardCornerRadius="22dp"
            android:backgroundTint="@color/bule"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ورود"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


</LinearLayout>