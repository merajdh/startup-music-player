<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/dark_bule"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <LinearLayout
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/light_gray"
            android:text="ایجاد حساب کاربری جدید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="2dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#7A7C87"
            android:layout_gravity="center_horizontal"
            android:text="لطفا فرم را پر کنید سپس ادامه دهید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        app:cardElevation="7dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:backgroundTint="#252a34"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <EditText
            android:drawablePadding="18dp"
            android:drawableEnd="@drawable/ic_user"
            android:textSize="15sp"
            android:id="@+id/Edt_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="18dp"            android:background="#252a34"
            android:hint="نام کاربری"
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHint="#7A7C87"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="7dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:backgroundTint="#252a34"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <EditText
            android:drawablePadding="18dp"
            android:drawableEnd="@drawable/ic_gmail"
