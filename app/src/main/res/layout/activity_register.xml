            android:layout_marginBottom="18dp"
            android:layout_marginStart="18dp"            android:inputType="text"
            android:background="#252a34"
            android:hint="ایمیل"
            android:textColor="@color/white"
            android:textColorHint="#7A7C87"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="7dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:backgroundTint="#252a34"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">


        <EditText
            android:elegantTextHeight="true"
            android:drawablePadding="18dp"
            android:drawableEnd="@drawable/ic_ic_password"
            android:layout_marginEnd="30dp"
            android:textSize="15sp"
            android:id="@+id/Edt_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="18dp"
            android:background="#252a34"
            android:inputType="text"
            android:hint=" رمز عبور"
            android:textColor="@color/white"
            android:textColorHint="#7A7C87"
            tools:ignore="TextContrastCheck,TextFields,TouchTargetSizeCheck" />




    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="7dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        android:backgroundTint="#252a34"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <EditText
            android:drawablePadding="18dp"
            android:drawableEnd="@drawable/ic_ic_password"
            android:layout_marginEnd="30dp"
            android:textSize="15sp"
            android:id="@+id/Edt_passwordRepeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="18dp"
            android:background="#252a34"
            android:inputType="text"
            android:hint="تکرار رمز عبور"
            android:textColor="@color/white"
            android:textColorHint="#7A7C87"
            tools:ignore="TextContrastCheck,TextFields,TouchTargetSizeCheck" />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/btn_register"
        android:layout_marginStart="20dp"
        app:cardElevation="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="65dp"
        android:clickable="true"
        app:cardCornerRadius="22dp"
        android:backgroundTint="@color/bule"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:focusable="true">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="ثبت نام"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

