<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:layoutAnimation="@anim/anim_main_layout"
    app:layout_anchorGravity=""
    android:background="?colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="موضوع گزارش خود را انتخاب کنید"
        android:layout_width="wrap_content"
        android:textColor="?colorOnPrimary"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="200dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="22dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:backgroundTint="?colorPrimaryVariant"
        android:layout_height="525dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_title_ticket"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layoutAnimation="@anim/recycler_layout_anim"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_recycler_contact_us"
                android:layout_height="wrap_content"/>



    </com.google.android.material.card.MaterialCardView>
</FrameLayout>