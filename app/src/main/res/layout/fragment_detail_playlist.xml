<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_back_bottom_sheet"
    app:cardBackgroundColor="?attr/colorPrimary"
    android:layout_gravity="bottom"
    android:padding="26dp"
    android:layout_height="wrap_content">


    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="32dp"
        android:layout_height="3dp"
        android:background="@color/light_blue"
        app:cardCornerRadius="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:gravity="center_horizontal|center_vertical|end"
        android:orientation="horizontal"
        android:padding="14dp"
        android:focusable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="4dp"
            android:text="ویرایش پلی لیست"
            android:textStyle="bold"
            android:textColor="@color/Gray"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/Gray" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="10dp"
        android:background="#8053565C" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical|end"
            android:orientation="horizontal"
            android:padding="14dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="4dp"
                android:text="حذف پلی لیست"
                android:textColor="#D3B60900"
                android:textSize="15sp" />

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_delete"
                app:tint="#D3B60900" />


        </LinearLayout>


</LinearLayout>