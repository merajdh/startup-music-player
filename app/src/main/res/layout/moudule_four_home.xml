<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_back_main"    android:orientation="vertical"
    android:layout_height="match_parent">


    <FrameLayout
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:layout_gravity="end"
            android:textColor="?colorOnPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="ترند ها"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layoutAnimation="@anim/recycler_layout_anim"
        android:id="@+id/rec_trand_music"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_recycler_trand_music"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:clickable="true"
        android:id="@+id/btn_more"
        android:layout_gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:textSize="13sp"
            android:layout_marginStart="6dp"
            android:textColor="@color/Gray"
            android:text="بیشتر ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>