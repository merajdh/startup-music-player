<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/shape_back_main"    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:text="موزیک خارجی"
        android:textColor="?colorOnPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_international"
        tools:itemCount="5"
        tools:listitem="@layout/item_recycler_international_music_category"
        android:layoutAnimation="@anim/recycler_layout_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/btn_more_international"
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true">

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back"
            android:layout_width="18dp"
            android:layout_height="18dp"/>


        <TextView
            android:textSize="13sp"
            android:layout_marginStart="6dp"
            android:textColor="@color/Gray"
            android:text="بیشتر ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>