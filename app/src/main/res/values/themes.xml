<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Startupmusicplayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#EEEEEE</item>
        <item name="colorOnPrimary">@color/dark_bule</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bule</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">#63A3A3A3</item>
        <item name="dialogTheme">@color/Gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/shabnam</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/dark_bule</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Textbody" >
        <item name="android:thumbTextPadding">2dp</item>
    </style>

    <style name="tiltle" parent="Theme.MaterialComponents" >
        <item name="fontFamily">@font/shabnam_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">23dp</item>
    </style>

    <style name="RoundedCornersDialog2" parent="android:Theme.Material.Dialog.NoActionBar.MinWidth">
        <item name="dialogCornerRadius">22dp</item>
        <item name="android:dialogCornerRadius" tools:ignore="NewApi">22dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="RoundedCornersBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/dark_bule</item>
        <item name="bottomSheetStyle">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="android:topRightRadius">18dp</item>
        <item name="android:topLeftRadius">18dp</item>

    </style>
    <style name="tolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/shabnam_bold</item>
        <item name="android:textSize">28sp</item>
    </style>


    <style name="CornerCut" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>

    </style>

</resources>