<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Startupmusicplayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_bule</item>
        <item name="colorPrimaryVariant">@color/dark_bule2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bule</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_bule</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/shabnam</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/dark_bule</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="tiltle" parent="Theme.MaterialComponents" >
        <item name="fontFamily">@font/shabnam_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/dark_bule</item>
        <item name="dialogCornerRadius">22dp</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
    </style>



</resources>